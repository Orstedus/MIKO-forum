@using MIKO.Models.CoctailModels
@model HomeModel

@{
    ViewData["Title"] = "Home";
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - MIKO</title>
</head>
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
<body>
    <div class="bodyHome">
        <div class="sidePlate">
            <p class="sidePlateTitle">Find Post(Id)</p>
            <form method="post" asp-action="findPost" asp-controller="Forum">
                <input type="text" asp-for="Id" class="idInput" placeholder="Id..." value="" />
                <button class="idButton" type="submit">Find</button>
            </form>
        </div>
        <div class="homePlate">
            <p class="homeTitle">Home page</p>
            @foreach (var item in Model.Posts)
            {
                <div onclick="location.href='/Forum/Post/@item.Id';" class="homePlateElement">
                    <p class="homePlateElementTitle">@item.Title</p>
                    <p class="homePlateElementAuthor">@item.AuthorLogin</p>
                    <p class="homePlateElementText">@item.Text</p>
                </div>
            }
        </div>
        <div class="sidePlate">
            <p class="sidePlateTitle">Find Profile(Id)</p>
            <form method="post" asp-action="findUser" asp-controller="Forum">
                <input type="text" asp-for="Id" class="idInput" placeholder="Id..." value=""/>
                <button class="idButton" type="submit">Find</button>
            </form>
        </div>
    </div>
</body>